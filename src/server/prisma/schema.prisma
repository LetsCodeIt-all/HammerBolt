// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Parent side: No fields/references arguments needed here for a one-to-one
  Cart         Cart?
}

model Cart {
  id        String    @id @default(uuid())
  userId    String    @unique
  products  Json      @default("[]") // Stores array of product objects

  // Child side: This defines the foreign key and the relation
  User      User      @relation(fields: [userId], references: [id])
}